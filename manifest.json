{
  "manifest_version": 2,
  "name": "Hacker News Checker",
  "version": "1.0",
  "description": "Check if the current URL has been discussed on Hacker News",
  "permissions": ["activeTab", "webNavigation", "https://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
